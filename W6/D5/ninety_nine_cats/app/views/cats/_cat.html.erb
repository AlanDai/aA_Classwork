<% if action == 'show' %>
    <a href="<%= cats_url %>">See all the cats, go back</a>
    <h1><%= cat.name.upcase %></h1>
<% else %>
    <a href="<%= cat_url(cat) %>"><%= cat.name.upcase %> </a>
<% end %>

<table>
    <thead>
        <tr>
            <th>Attribute</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Age</td>
            <td><%= cat.age %></td>
        </tr>
        <tr>
            <td>Birth Date</td>
            <td><%= cat.birth_date %></td>
        </tr>
        <tr>
            <td>Color</td>
            <td><%= cat.color %></td>
        </tr>
        <tr>
            <td>Sex</td>
            <td><%= cat.sex %></td>
        </tr>
    </tbody>
</table>